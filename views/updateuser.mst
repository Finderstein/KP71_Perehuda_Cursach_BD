<!doctype html>
<html lang="en">
  {{> head }}
  <body style="background: rgb(136, 142, 217);color: rgb(0, 40, 98);">
    
    {{> header }}

    <br>
    <div class="container">
      <form action="/users/{{userInfo._id}}/update" method="POST" enctype="multipart/form-data" class="needs-validation was-validated">
        <fieldset class="col" style="border: 1px solid #e0e0e0; padding-bottom: 15px;">
          <legend style="width: auto; border: 2px solid #e0e0e0; padding: 0 10px;">Update your profile:</legend>
          <div class="form-group">
            <label for="inputFullname">Full name:</label>
            <input type="text" name="fullname" class="form-control" id="inputFullname" value="{{userInfo.fullname}}" minlength="4" maxlength="50" required>
            <div class="invalid-feedback">
              Invalid fullname.
            </div>
          </div>
          <div class="form-group">
            <label for="inputTelegram">Telegram username:</label>
            <input type="text" name="telegram" class="form-control" id="inputTelegram" value="{{userInfo.chatUsername}}"maxlength="999">
          </div>
          <div class="form-group">
            <label for="inputBiography">Biography:</label>
            <textarea name="bio" rows="10" cols="30"maxlength="9999" class="form-control" id="inputBiography" required>{{userInfo.bio}}</textarea>
            <div class="invalid-feedback">
              Invalid biography.
            </div>
          </div>
          <div class="input-group">
            <div class="custom-file">
              <input type="file" name="ava" class="custom-file-input" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04">
              <label class="custom-file-label" for="inputGroupFile04">Choose avatar image</label>
            </div>
          </div>
          <br>
          {{#err}}
          <div class="form-group">
            <label for="error" style="color:#C73838">{{err}}</label>
          </div>
          {{/err}}
          <button type="submit" class="btn btn-primary">Submit</button>
        </fieldset>
      </form>
    </div>

    {{> footer }}
    
  </body>
</html>