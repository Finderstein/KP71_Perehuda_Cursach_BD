<!doctype html>
<html lang="en">
  {{> head }}
  <body style="background: rgb(136, 142, 217);color: rgb(0, 40, 98);">
    
    {{> header }}

    <br>
    <div class="container">
      <form action="/lists/{{listId}}/notes/{{note._id}}/update" method="POST" enctype="multipart/form-data" class="needs-validation was-validated">
        <fieldset class="col" style="border: 1px solid #e0e0e0; padding-bottom: 15px;">
          <legend style="width: auto; border: 2px solid #e0e0e0; padding: 0 10px;">Update your note:</legend>
          <div class="form-group">
            <label for="inputTitle">Title:</label>
            <input type="text" name="nTitle" class="form-control" id="inputTitle" aria-describedby="titleHelp" value="{{note.title}}" minlength="4" maxlength="30" required>
            <div class="invalid-feedback">
              Invalid title.
            </div>
          </div>
          <div class="form-group">
            <label for="inputImportance">Importance:</label>
            <input type="number" name="importance" class="form-control" id="inputImportance" value="{{note.importance}}" min="1" max="9999" required>
            <div class="invalid-feedback">
              Invalid importance.
            </div>
          </div>
          <div class="form-group">
            <label for="inputNote">Note:</label>
            <textarea name="note" rows="10" cols="30"maxlength="9999" class="form-control" id="inputNote" required>{{note.note}}</textarea>
            <div class="invalid-feedback">
              Invalid note.
            </div>
          </div>
          <br>
          <button type="submit" class="btn btn-primary">Update</button>
        </fieldset>
      </form>
    </div>

    {{> footer }}
    
  </body>
</html>