<!doctype html>
<html lang="en">
  {{> head }}
  <body style="background: rgb(136, 142, 217);color: rgb(0, 40, 98);">
    
    {{> header }}

    <br>
    <div class="container">
      <form action="/lists/new" method="POST" enctype="multipart/form-data" class="needs-validation was-validated">
        <fieldset class="col" style="border: 1px solid #e0e0e0; padding-bottom: 15px;">
          <legend style="width: auto; border: 2px solid #e0e0e0; padding: 0 10px;">New list of notes:</legend>
          <div class="form-group">
            <label for="inputTitle">Title:</label>
            <input type="text" name="nTitle" class="form-control" id="inputTitle" aria-describedby="titleHelp" placeholder="Enter Title" minlength="4" maxlength="30" required>
            <div class="invalid-feedback">
              Invalid title.
            </div>
          </div>
          <div class="form-group">
            <label for="inputImportance">Importance:</label>
            <input type="number" name="importance" class="form-control" id="inputImportance" placeholder="Enter importance" min="1" max="9999" required>
            <div class="invalid-feedback">
              Invalid importance.
            </div>
          </div>
          <div class="form-group">
            <label for="inputDescription">Description:</label>
            <textarea name="description" rows="10" cols="30"maxlength="9999" class="form-control" id="inputDescription" placeholder="Description" required></textarea>
            <div class="invalid-feedback">
              Invalid description.
            </div>
          </div>
          <div class="form-group">
            <select name="access">
              <option value="public" selected >Public</option>
              <option value="private">Private</option>
            </select>
          </div>
          <br>
          <button type="submit" class="btn btn-primary">Create</button>
        </fieldset>
      </form>
    </div>

    {{> footer }}
    
  </body>
</html>